<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GravityBouton">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GravityTimer">
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">#1a1a1a</item>
        <item name="android:fontFamily">@font/gravity_bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GravityLibelle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#1a1a1a</item>
        <item name="android:fontFamily">@font/gravity_book</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="GravityTinyLibelle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/gravity_book</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="GravityText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/gravity_book</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="GravityInstruction">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/gravity_book</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
